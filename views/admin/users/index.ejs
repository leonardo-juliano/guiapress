<%- include ('../../partials/header.ejs'); %>
<%- include ('../../partials/navbar.ejs'); %>

<div class="container">
    <hr>
    <h2>Usuários</h2>
   <a href="/admin/users/create"><button class="btn btn-success">Criar usuario</button></a> 
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Email</th>
                <th>ações</th>
            </tr>
        </thead>
        <thead>
            <tbody>
                <% users.forEach(user => { %>
                    <tr>
                        <th><%= user.name %></th>
                        <th><%= user.email %></th>
                        <th>
                            <a href="/admin/categories/edit/"><button class="btn btn-warning">Editar</button></a>
                            <form action="/user/delete" method="POST" style="display: inline;" onsubmit="confirmedDelete(event,this)">
                                <input type="hidden" name="id" value="<%= user.id %>"  >
                                <button class="btn btn-danger">Deletar</button>
                            </form>
                            
                        </th>
                        
                    </tr>
                <% }) %>
        </thead>
    </table>

<%- include ('../../partials/footer.ejs'); %>