<%- include ('../../partials/header.ejs'); %>
<%- include ('../../partials/navbar.ejs'); %>

<div class="container">
    <hr>
    <h2>Categorias</h2>
   <a href="/admin/categories/new"><button class="btn btn-success">Cadastrar categoria</button></a> 
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Categoria</th>
                <th>slug</th>
                <th>ações</th>
            </tr>
        </thead>
        <thead>
            <tbody>
                <% categories.forEach(category => { %>
                    <tr>
                        <th><%= category.id %></th>
                        <th><%= category.title %></th>
                        <th><%= category.slug %></th>
                        <th>
                            <a href="/admin/categories/edit/<%= category.id %>"><button class="btn btn-warning">Editar</button></a>
                            <form action="/categories/delete" method="POST" style="display: inline;" onsubmit="confirmedDelete(event,this)">
                                <input type="hidden" name="id" value="<%= category.id %>"  >
                                <button class="btn btn-danger">Deletar</button>
                            </form>
                            
                        </th>
                        
                    </tr>
                <% }) %>
        </thead>
    </table>
    

</div>
<%- include ('../../partials/footer.ejs'); %>
<script>
    function confirmedDelete(event, form){
        event.preventDefault();
        let decision = confirm("Você quer deletar esta categoria?");
        if(decision){
            form.submit();
        }
    }
</script>
